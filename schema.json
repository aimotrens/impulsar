{
  "$id": "https://github.com/aimotrens/impulsar",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "impulsar is a tool.",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri"
    }
  },
  "patternProperties": {
    "^.+$": {
      "$ref": "#/definitions/job"
    }
  },
  "definitions": {
    "job": {
      "type": "object",
      "description": "Ein Job, der ausgeführt werden soll.",
      "oneOf": [
        {
          "allOf": [
            {
              "not": {
                "required": [
                  "jobs"
                ]
              }
            },
            {
              "not": {
                "required": [
                  "jobs:pre"
                ]
              }
            }
          ]
        },
        {
          "required": [
            "jobs"
          ],
          "not": {
            "required": [
              "jobs:pre"
            ]
          }
        },
        {
          "required": [
            "jobs:pre"
          ],
          "not": {
            "required": [
              "jobs"
            ]
          }
        }
      ],
      "additionalProperties": false,
      "properties": {
        "shell": {
          "$ref": "#/definitions/shell"
        },
        "jobs": {
          "type": "array",
          "description": "Alias für jobs:pre.",
          "items": {
            "type": "string"
          }
        },
        "jobs:pre": {
          "type": "array",
          "description": "Jobs, die vor dem Script ausgeführt werden.",
          "items": {
            "type": "string"
          }
        },
        "jobs:post": {
          "type": "array",
          "description": "Jobs, die nach dem Script ausgeführt werden.",
          "items": {
            "type": "string"
          }
        },
        "script": {
          "type": "array",
          "description": "Das Script, das ausgeführt werden soll. Für jedes Element wird eine neue Shell gestartet.",
          "items": {
            "type": "string"
          }
        },
        "variables": {
          "type": "object",
            "description": "Variablen, die in der Shell gesetzt werden sollen.",
          "additionalProperties": {
            "type": "string"
          }
        },
        "workDir": {
          "type": "string",
            "description": "Das Arbeitsverzeichnis, in dem das Script ausgeführt werden soll."
        }
      }
    },
    "shell": {
      "type": "object",
      "required": [
        "type"
      ],
      "oneOf": [
        {
          "properties": {
            "type": {
              "const": "docker"
            },
            "image": {
              "type": "string",
              "minLength": 1
            },
            "uidGid": {
              "type": "string",
              "pattern": "^[0-9]+:[0-9]+$"
            }
          },
          "required": [
            "image"
          ]
        },
        {
          "properties": {
            "type": {
              "not": {
                "const": "docker"
              }
            }
          },
          "not": {
            "required": [
              "image", "uidGid"
            ]
          }
        }
      ],
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "docker",
            "bash",
            "powershell",
            "pwsh",
            "custom"
          ]
        },
        "image": {
          "type": "string",
          "description": "Das Docker-Image, das verwendet werden soll.",
          "minLength": 1
        },
        "uidGid": {
          "type": "string",
          "description": "Die UID und GID, die verwendet werden sollen.",
          "pattern": "^[0-9]+:[0-9]+$"
        },
        "bootCommand": {
          "type": "array",
            "description": "Der Befehl, der ausgeführt werden soll, um die Shell zu starten.",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}